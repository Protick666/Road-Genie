<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.protick.myapplication.FromToPage">
    <TextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"

        android:layout_alignParentLeft="true"

        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="Enter Your Location:" />
    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="10dp"
        android:layout_width="368dp"
        android:layout_below="@+id/editText1"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="48dp"
        />
    <TextView
        android:id="@+id/editText2"


        android:layout_below="@+id/spinner"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"

        android:layout_alignParentLeft="true"

        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="Enter Your Destination:" />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_marginTop="10dp"
        android:layout_width="368dp"
        android:layout_below="@+id/editText2"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="177dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner2"

        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="Select Your Mode" />
    <Spinner
        android:id="@+id/spinner3"
        android:layout_below="@+id/editText"
        android:layout_marginTop="10dp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="48dp"
        />
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="70dp"
        android:layout_alignEnd="@+id/spinner2"

        android:layout_alignRight="@+id/spinner2"

        android:text="Search" />

    <Button
        android:id="@+id/btnSubmit11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="180dp"
        android:layout_alignEnd="@+id/spinner2"

        android:layout_alignRight="@+id/spinner2"

        android:text="Help" />


</RelativeLayout>
